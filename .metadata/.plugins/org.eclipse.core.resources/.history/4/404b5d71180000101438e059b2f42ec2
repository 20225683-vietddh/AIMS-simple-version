package model;

import java.util.ArrayList;

public class Test {
	public static void main(String[] args) {
		Media dvd1 = new DigitalVideoDisc("Frozen I", "Animation", 13.99, 100, "Elsa Dinh");
		Media dvd2 = new DigitalVideoDisc("Frozen II", "Animation", 15.89, 110, "Julia Vu");
		Media dvd3 = new DigitalVideoDisc("Snow White", "Animation", 11.84, 92, "Bella An");
	    
		// Test some methods in class DigitalVideoDisc.
		System.out.println(dvd1.toString());
		System.out.println(dvd1.equals(dvd2));
		
		ArrayList<String> authors1 = new ArrayList<String>();
		authors1.add("LUONG Thi Long An");
		authors1.add("DAO Thi Dieu Oanh");
		Media b1 = new Book("Object-oriented programming", "Science", 2.5, authors1);
		Media b2 = new Book("Database theory", "Science", 1.9, authors1);
		
		// Test some methods in class Book.
		System.out.println(b1.toString());
		b1.addAuthor("NGUYEN Thi Bich Dao");
		b2.addAuthor("NGUYEN Thi Kim Anh");
		System.out.println(b1.toString());
		
		Cart cart = new Cart();
		
		// Test some methods in class Cart.
		cart.addMedia(dvd1, 2);
		cart.addMedia(dvd2, 3);
		cart.addMedia(dvd3, 1);
		cart.addMedia(b1, 4);
		cart.addMedia(b2, 3);
		cart.show();
	}
}
